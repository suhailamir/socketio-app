    <script>
        $("#bedrijfscultuur").bind( "click", function( event ) {
            console.log('a');
        });
            var data = "&name=" + document.getElementById("company_name").value;
        $('#signup').submit(function(e){
            e.preventDefault();
            data += "&company_traits=" + $('#company_traits').val();
            data += "&location=" + document.getElementById("location").value;
            data += "&company_type=" + document.getElementById("company_type").value;
            data += "&company_size=" + document.getElementById("company_size").value;
            console.log(data);
            page2();          
        });
        $('#signup_page2').submit(function(e){
            e.preventDefault();
            
            var http = new XMLHttpRequest();
            http.open("POST", "", true);
            http.setRequestHeader("Content-type","application/x-www-form-urlencoded");
            
            data += "&email=" + $('#email').val();
            data += "&password=" + $('#password').val();
            data += "&phone=" + $('#phone_number').val();
            data += "&sector=" + document.getElementById('sector').value;
            data += "&company_description=" + document.getElementById('company_description').value;
            data += "&amount_vacancies=" + document.getElementById('amount_vacancies').value;
            
                http.send(data);
            http.onreadystatechange = function() {
                if (this.readyState == 4 && this.status == 200) {
                    console.log(this);
                    console.log(this.responseText);
                    let response = JSON.parse(this.responseText)
                    if(response.status == "LoggedIn"){
                        setCookie('uuid', response.cookies.uuid)
                        setCookie('type', response.cookies.type)
                        window.location.href = "./";
                    }
                }
            };
            
        });
        
    function setCookie(a, b){
        document.cookie = a + "=" + b + ";"
    }
        $('.dot').click(function(){
            if($(this).index()==0){
                page1();
            }
            if($(this).index()==1){
                $('#signup').submit();
                page2();
            }
        });
        function page1(){
            $('#signup_page2').hide();
            $('#signup').show();
        }
        function page2(){
            $('#signup_page2').show();
            $('#signup').hide();
        }
        $('#eye').mouseenter(function(){
            $('#password').attr('type','text');
        });
        $('#eye').mouseleave(function(){
            $('#password').attr('type','password');
        });
